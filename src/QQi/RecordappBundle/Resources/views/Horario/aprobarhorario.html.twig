{% extends 'QQiRecordappBundle::layout.html.twig' %}

{% block title %}Horario {% endblock %}

{% block body %}

    {% for type, flashMessage in app.session.flashbag.all() %}
        <div class="alert alert-{{ type }} fade in">
            <button class="close" data-dismiss="alert" type="button">×</button>
            {% if flashMessage.title is defined %}
                <strong>{{ flashMessage.title }}</strong>
                {{ flashMessage.message }}
            {% else %}
                {{ type }}
            {% endif %}
        </div>
    {% endfor %}

    <div class="container">
        <div class="row">
            <div class="span12">

                <table class="table table-bordered table-striped">
                    <tbody>
                    {# <tr>
                         <th>Id</th>
                         <td>{{ entity.id }}</td>
                     </tr>#}
                    <tr>
                        <th>Fechacreacion</th>
                        <td>{{ entity.fechaCreacion|date('Y-m-d H:i:s') }}</td>
                    </tr>
                    <tr>
                        <th>Estado</th>
                        <td>{{ entity.idEstado }}</td>
                    </tr>
                    <tr>
                        <th>Ciclo</th>
                        <td>{{ entity.idCiclo }}</td>
                    </tr>
                    <tr>
                        <th>Escuela</th>
                        <td>{{ entity.idEscuela }}</td>
                    </tr>
                    </tbody>
                </table>

                <a class="btn btn-primary btn-sm" href="{{ path('horario') }}">
                    Regresar a listado
                </a>

                <a class="btn btn-success btn-sm"  href="{{ path('cambiar_estado', { 'id': entity.id }) }}">
                    Aprobar
                </a>

            </div>
        </div>

        <div class="row">
           {# <a class="btn btn-primary btn-sm" href="{{ path('horario') }}">
                Regresar a listado
            </a>

            <a class="btn btn-success btn-sm"  href="{{ path('horario_edit', { 'id': entity.id }) }}">
                Modificar
            </a>


            <form action="{{ path('horario_delete', { 'id': entity.id }) }}" method="post">
                {{ form_widget(delete_form) }}
                <br />
                <input class="btn btn-danger btn-sm" type="submit" value="Eliminar">
            </form>#}


            <div class="span12">

                <table class="table table-bordered table-striped">
                    <thead>
                    <tr>
                        <th>#</th>
                        <th>Código</th>
                        <th>Asignatura</th>
                        <th>Tipo de Actividad</th>
                        <th>Numero de Grupo</th>
                        <th>Local</th>
                        <th>Dia</th>
                        <th>Franja</th>
                        <th>Hora Inicio</th>
                        <th>Hora Fin</th>
                        <th>Opciones</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for entity in actividadeshorario %}
                        <tr>
                            <td><a href="{{ path('actividad_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                            <td>{{ entity.idHoasig.idAsignatura.codigo }}</td>
                            <td>{{ entity.idHoasig.idAsignatura.nombre }}</td>
                            <td>{{ entity.idTipoactividad }}</td>
                            <td>{{ entity.numerogrupo }}</td>
                            <td>{{ entity.idLugar }}</td>
                            <td>{{ entity.idDia.nombre}}</td>
                            <td>{{ entity.idFranja.nombre }}</td>
                            <td>{{ entity.idFranja.horaInicio|date('G:ia')}}</td>
                            <td>{{ entity.idFranja.horaFin|date('G:ia')}}</td>
                            <td>
                                <a href="{{ path('actividad_show', { 'id': entity.id }) }}"><i class="icon-th-list"></i> show</a>
                                <a href="{{ path('actividad_edit', { 'id': entity.id }) }}"><i class="icon-edit"></i> edit</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>

                </table>

            </div>


</div>
</div>

{% endblock %}
