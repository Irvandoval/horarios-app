{% extends 'QQiRecordappBundle::layout.html.twig' %}

{% block title %}Todos los Ciclo {% endblock %}

{% block body %}

<!-- Main hero unit for a primary marketing message or call to action -->
<div class="hero-unit">
    <h3>Ciclo</h3>
        <p><a class="btn btn-primary btn-large" href="{{ path('ciclo_new') }}">Nuevo &raquo;</a></p>
    </div>

<!-- Example row of columns -->
<div class="row">
    <div class="span12">

        <table class="table table-bordered table-striped">
    <thead>
        <tr>
                <th>#</th>
                <th>Nombre</th>
                <th>Fechainicio</th>
                <th>Fechafin</th>
            <th>Opciones</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('ciclo_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.nombre }}</td>
            <td>{% if entity.fechaInicio %}{{ entity.fechaInicio|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>{% if entity.fechaFin %}{{ entity.fechaFin|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>
                    <a href="{{ path('ciclo_show', { 'id': entity.id }) }}"><i class="icon-th-list"></i> show</a>
                    <a href="{{ path('ciclo_edit', { 'id': entity.id }) }}"><i class="icon-th-list"></i> edit</a>
            </td>
        </tr>
    {% endfor %}
    </tbody>

        </table>

</div>
    </div>

{% endblock %}
