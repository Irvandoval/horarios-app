<h1>Ciclo edit</h1>

<form action="{{ path('ciclo_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <p>
        <button type="submit">Edit</button>
    </p>
</form>

<div class="row">
        <a href="{{ path('ciclo') }}">
            <i class="icon-th-list"></i> Regresar a listado
        </a>

        <form action="{{ path('ciclo_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit" class="btn btn-info" value="Eliminar"></button>
        </form>

</div>
