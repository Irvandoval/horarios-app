{% extends 'QQiRecordappBundle::layout.html.twig' %}

{% block title %}Carrera {% endblock %}

{% block body %}

<div class="container">
<div class="row">
    <div class="span12">

        <table class="table table-bordered table-striped">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Nombre</th>
            <td>{{ entity.nombre }}</td>
        </tr>
    </tbody>
</table>

    </div>
</div>

<div class="row">
        <a class="btn btn-primary btn-sm" href="{{ path('carrera') }}">
            Regresar a listado
        </a>

        <a class="btn btn-success btn-sm"  href="{{ path('carrera_edit', { 'id': entity.id }) }}">
           Modificar
        </a>


        <form action="{{ path('carrera_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <br />
            <input class="btn btn-danger btn-sm" type="submit" value="Eliminar">
        </form>

</div>
</div>

{% endblock %}
