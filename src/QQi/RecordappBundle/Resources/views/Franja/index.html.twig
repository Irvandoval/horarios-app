{% extends 'QQiRecordappBundle::layout.html.twig' %}

{% block title %}Franjas de Horario{% endblock %}

{% block body %}

<div class="container">
<!-- Main hero unit for a primary marketing message or call to action -->
<div class="hero-unit">
    <h3>Franja</h3>
        <p><a class="btn btn-primary btn-large" href="{{ path('franja_new') }}">Nuevo &raquo;</a></p>
    </div>

<!-- Example row of columns -->
<div class="row">
    <div class="span12">

        <table class="table table-bordered table-striped">
    <thead>
        <tr>
                <th>#</th>
                <th>Nombre</th>
                <th>Hora Inicio</th>
                <th>Hora Fin</th>
                <th>Ciclo</th>
            <th>Opciones</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('franja_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.nombre }}</td>
            <td>{{ entity.horaInicio|date('G:ia')  }}</td>
            <td>{{ entity.horaFin|date('G:ia') }}</td>
            <td>{{ entity.idCiclo }}</td>
            <td>
                    <a href="{{ path('franja_show', { 'id': entity.id }) }}"><i class="icon-th-list"></i> show</a>
                    <a href="{{ path('franja_edit', { 'id': entity.id }) }}"><i class="icon-edit"></i> edit</a>
            </td>
        </tr>
    {% endfor %}
    </tbody>

        </table>

</div>
</div>
</div>

{% endblock %}
