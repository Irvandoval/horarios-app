{% extends "QQiRecordappBundle::layout.html.twig" %}

{% block title %}Todas las actividades{% endblock %}

{% block body %}

    <!-- Main hero unit for a primary marketing message or call to action -->
    <div class="hero-unit">
        <h3>Actividades</h3>
        <p><a class="btn btn-primary btn-small" href="{{ path('tipoactividad_new') }}">Nuevo &raquo;</a></p>
    </div>

    <div class="row">
        <div class="span12">
            <table class="table table-bordered table-striped">
                <thead>
                <tr>
                    <th>#</th>
                    <th>Nombre</th>
                    <th>Opciones</th>
                </tr>
                </thead>
                <tbody>
                {% for entity in entities %}
                    <tr>
                        <td><a href="{{ path('tipoactividad_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                        <td>{{ entity.nombre }}</td>
                        <td>
                            <a href="{{ path('tipoactividad_show', { 'id': entity.id }) }}"><i class="icon-th-list"></i> Ver </a>
                             <a href="{{ path('tipoactividad_edit', { 'id': entity.id }) }}"><i class="icon-edit"></i> Modificar </a>

                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

        </div>
    </div>

{% endblock %}