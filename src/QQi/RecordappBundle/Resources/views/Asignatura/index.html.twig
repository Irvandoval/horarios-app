{% extends 'QQiRecordappBundle::layout.html.twig' %}

{% block title %}Todas las Asignaturas {% endblock %}

{% block body %}

<div class="container">
<!-- Main hero unit for a primary marketing message or call to action -->
<div class="hero-unit">
    <h3>Asignatura</h3>
        <p><a class="btn btn-primary btn-large" href="{{ path('asignatura_new') }}">Nuevo &raquo;</a></p>
    </div>

<!-- Example row of columns -->
<div class="row">
    <div class="span12">

        <table class="table table-bordered table-striped">
    <thead>
        <tr>
                <th>#</th>
                <th>Nombre</th>
                <th>Codigo</th>
                <th>Escuela</th>
                <th>Opciones</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('asignatura_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.nombre }}</td>
            <td>{{ entity.codigo }}</td>
            <td>{{ entity.idEscuela }}</td>
            <td>
                    <a href="{{ path('asignatura_show', { 'id': entity.id }) }}"><i class="icon-th-list"></i> show</a>
                    <a href="{{ path('asignatura_edit', { 'id': entity.id }) }}"><i class="icon-edit"></i> edit</a>
            </td>
        </tr>
    {% endfor %}
    </tbody>

        </table>

</div>
</div>
</div>

{% endblock %}
