{% extends "QQiRecordappBundle::layout.html.twig" %}

{% block title %}Usuario{% endblock %}

{% block body %}
	<div class="hero-unit">
		<h2>{{ usuario.apellido }}, {{ usuario.nombre }}</h2>
		<p><strong>{{ usuario.email }}</strong></p>
		<p>
			<a class="btn btn-primary btn-sm" href="{{ path('admin_usuario_editar', {'id': usuario.id }) }}">Modificar Usuario</a>
			<a class="btn btn-primary btn-sm" href="{{ path('admin_usuario_listado') }}">Regresar al Listado</a>
		</p>
	</div>
{% endblock %}
