{% extends 'QQiRecordappBundle::layout.html.twig' %}

{% block title %}Todos los Horarioasignatura {% endblock %}

{% block body %}

<div class="container">
<!-- Main hero unit for a primary marketing message or call to action -->
<div class="hero-unit">
    <h3>Horario asignatura</h3>
        <p><a class="btn btn-primary btn-large" href="{{ path('yes_new') }}">Nuevo &raquo;</a></p>
    </div>

<!-- Example row of columns -->
<div class="row">
    <div class="span12">

        <table class="table table-bordered table-striped">
    <thead>
        <tr>
                <th>#</th>
                <th>Correlativo</th>
                <th>Horario</th>
                <th>Asignatura</th>
            <th>Opciones</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('yes_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.correlativo }}</td>
            <td>{{ entity.idHorario }}</td>
            <td>{{ entity.idAsignatura }}</td>
            <td>
                    <a href="{{ path('yes_show', { 'id': entity.id }) }}"><i class="icon-th-list"></i> show</a>
                    <a href="{{ path('yes_edit', { 'id': entity.id }) }}"><i class="icon-edit"></i> edit</a>
            </td>
        </tr>
    {% endfor %}
    </tbody>

        </table>

</div>
    </div>
</div>

{% endblock %}
