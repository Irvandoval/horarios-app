{% extends 'QQiRecordappBundle::layout.html.twig' %}

{% block title %}Modificar Estado {% endblock %}

{% block body %}

<div class="container">
<h1>Estados edit</h1>

<form action="{{ path('estados_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <p>
        <button type="submit">Edit</button>
    </p>
</form>

<div class="row">
        <a href="{{ path('estados') }}">
            <i class="icon-th-list"></i> Regresar a listado
        </a>

        <form action="{{ path('estados_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit" class="btn btn-info" value="Eliminar">Eliminar</button>
        </form>

</div>
</div>

{% endblock %}
