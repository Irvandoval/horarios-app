<h1>Estados</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Nombre</th>
            <td>{{ entity.nombre }}</td>
        </tr>
    </tbody>
</table>

<div class="row">
        <a href="{{ path('estados') }}">
            <i class="icon-th-list"></i> Regresar a listado
        </a>

        <a href="{{ path('estados_edit', { 'id': entity.id }) }}">
            <i class="icon-edit"></i> Modificar
        </a>


        <form action="{{ path('estados_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit" class="btn btn-info" value="Eliminar">Eliminar</button>
        </form>

</div>
