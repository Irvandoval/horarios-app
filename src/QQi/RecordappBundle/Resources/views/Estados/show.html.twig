{% extends 'QQiRecordappBundle::layout.html.twig' %}

{% block title %}Estado {% endblock %}

{% block body %}

<div class="container">
<h1>Estados</h1>

<table class="table table-bordered table-striped">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Nombre</th>
            <td>{{ entity.nombre }}</td>
        </tr>
    </tbody>
</table>

<div class="row">
        <a class="btn btn-primary btn-sm" href="{{ path('estados') }}">
            Regresar a listado
        </a>

        <a class="btn btn-success btn-sm"  href="{{ path('estados_edit', { 'id': entity.id }) }}">
           Modificar
        </a>


        <form action="{{ path('estados_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <br />
            <input class="btn btn-danger btn-sm" type="submit" value="Eliminar">
        </form>

</div>
</div>

{% endblock %}
